{
  "name": "isomorphic-logger",
  "version": "1.0.0",
  "description": "Lightweight isomorphic logger for Next.js and various runtimes (browser, Node.js, serverless). Provides a consistent logging interface for both client and server, with automatic environment detection.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "logger",
    "isomorphic",
    "browser",
    "nodejs"
  ],
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@vitest/ui": "^4.0.14",
    "typescript": "^5.3.3",
    "vitest": "^4.0.14"
  },
  "author": "kzhxxn",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kzhxxn/isomorphic-logger.git"
  },
  "bugs": {
    "url": "https://github.com/kzhxxn/isomorphic-logger/issues"
  },
  "homepage": "https://github.com/kzhxxn/isomorphic-logger#readme",
  "packageManager": "pnpm@10.12.1"
}
