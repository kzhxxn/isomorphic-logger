{
  "name": "isomorphic-logger-ts",
  "version": "1.0.2",
  "description": "Lightweight isomorphic logger for Next.js and various runtimes (browser, Node.js, serverless). Provides a consistent logging interface for both client and server, with automatic environment detection.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "logger",
    "isomorphic",
    "browser",
    "nodejs"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.14"
  },
  "author": "kzhxxn",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kzhxxn/isomorphic-logger.git"
  },
  "bugs": {
    "url": "https://github.com/kzhxxn/isomorphic-logger/issues"
  },
  "homepage": "https://github.com/kzhxxn/isomorphic-logger#readme",
  "packageManager": "pnpm@10.12.1",
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0 --"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "gitChecks": false
  }
}
